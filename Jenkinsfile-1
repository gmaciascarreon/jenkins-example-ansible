pipeline {
  agent any

  stages {
    stage('Hello') {
      steps {
        sh '''
          sudo dnf install -y apptainer python3
          python3 -m venv ansible
          source ansible/bin/activate
          pip install --upgrade pip
          pip install ansible
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }
  }
}
