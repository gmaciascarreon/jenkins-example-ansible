pipeline {
  agent {
        docker {
            image 'rockylinux:9'
        }
}
  stages {
    stage('Hello') {
      steps {
        sh '''
          uname -a
          yum install -y apptainer python3
          python3 -m venv ansible
          source ansible/bin/activate
          pip install --upgrade pip
          pip install ansible
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }
  }
}
